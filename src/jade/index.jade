doctype html
html(lang='en').loading
  head
    meta(charset='utf-8')
    title VCard for my honey
    link(rel='stylesheet', href='style.css')
    meta(content='width=device-width, initial-scale=1.0, user-scalable=no',name='viewport')
    meta(content='Hashobject (team@hashobject.com)',name='author')
    meta(name="keywords", content="valentines card, valentine's card, vcard, animation, css3, html5, card")
    script(src='https://code.jquery.com/jquery-2.1.3.min.js')
    script(src='jquery.svg.min.js')
  body
    .loading_controls
      p Happy Valentine's day
      button#start-animation Start
      span Be ready for some music
    #buttons
      a#share-via-email.btn(target="_blank") Send this card
      a#create-new.btn(href="create.html") Create new
    #social
      .g-plusone(data-size="medium", data-annotation="none", data-href="http://labs.marynaaleksandrova.com/valentine-card/")
      a(href="https://twitter.com/share", class="twitter-share-button", data-url="http://labs.marynaaleksandrova.com/valentine-card/", data-via="m_aleksandrova", data-count="none") Tweet
    #wrapper
      div#final
      #people_wrapper
        #first_person
          div#first_person_body
          div#first_person_leg2
          div#first_person_leg1
          div#first_person_hand
        #second_person
          div#second_person_leg2
          div#second_person_leg1
          div#second_person_body
          div#second_person_hand
      #ball_wrapper
        img#thermometer(src='images/thermometer.png')
        #fire_stand
          img(src='images/fire_stand.png')
          img#fire(src='images/fire.png')
        #second_person_ball
        #first_person_ball
        #valentine_ball
        #full_system
          img#flask(src='images/flask.png')
          .clamp
          .clamp
    audio
      source(src="valentines.mp3", type="audio/mp3")
      source(src="valentines.ogg", type="audio/ogg")
    div#svgs
      include images/boy-to-right-top.svg
      include images/boy-to-right-legs.svg
      include images/boy-to-right-hands.svg
      include images/boy-to-left-top.svg
      include images/boy-to-left-legs.svg
      include images/boy-to-left-hands.svg
      include images/girl-to-right-top.svg
      include images/girl-to-right-legs.svg
      include images/girl-to-right-hands.svg
      include images/girl-to-left-top.svg
      include images/girl-to-left-legs.svg
      include images/girl-to-left-hands.svg
      include images/b+b.svg
      include images/b+g.svg
      include images/g+b.svg
      include images/g+g.svg

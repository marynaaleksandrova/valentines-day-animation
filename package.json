{
  "name": "valentines-day-animation",
  "version": "1.0.0",
  "description": "Valentine's card",
  "main": "index.js",
  "scripts": {
    "start": "npm run watch-styles & npm run watch-jade",
    "watch-styles": "stylus --include ./node_modules/nib/lib -w ./src/styl/ -o ./dist/",
    "watch-jade": "jade --watch ./src/jade/*.jade --out ./dist/",
    "build-styles": "stylus --include ./node_modules/nib/lib ./src/styl/ -o ./dist/css/",
    "build-jade": "jade ./src/jade/*.jade --out ./dist/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marynaaleksandrova/valentines-day-animation.git"
  },
  "keywords": [
    "css3",
    "animation",
    "valentine's",
    "card"
  ],
  "author": "Maryna Aleksandrova",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marynaaleksandrova/valentines-day-animation/issues"
  },
  "homepage": "https://github.com/marynaaleksandrova/valentines-day-animation",
  "devDependencies": {
    "jade": "^1.9.2",
    "nib": "^1.1.0",
    "stylus": "^0.50.0"
  }
}

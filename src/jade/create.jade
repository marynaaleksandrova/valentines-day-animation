doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Create your Valentine's card
    style(type='text/css').
      form {
        text-align: center;
      }
      form fieldset.person {
        display: inline-block;
        width: 40%;
      }
      button {
        display: block;
      }
  body
    form(method='GET', action='index.html')
      fieldset.person
        legend
          | You
        p
          label Sex:
          input#firstSex(type='radio', name='fpSex', value='female', checked='checked')
          input#firstSex(type='radio', name='fpSex', value='male')
        p
          label Hair color:
          input#firstHair(type='radio', name='fpHair', value='black', checked='checked')
          input#firstHair(type='radio', name='fpHair', value='red')
          input#firstHair(type='radio', name='fpHair', value='white')
      fieldset.person
        legend
          | Your partner
        p
          label Sex:
          input#secondSex(type='radio', name='spSex', value='female', checked='checked')
          input#secondSex(type='radio', name='spSex', value='male')
        p
          label Hair color:
          input#secondHair(type='radio', name='spHair', value='black', checked='checked')
          input#secondHair(type='radio', name='spHair', value='red')
          input#secondHair(type='radio', name='spHair', value='white')
